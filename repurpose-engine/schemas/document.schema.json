{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Document",
  "type": "object",
  "required": ["id", "source", "url", "title", "date", "doc_type", "entities"],
  "properties": {
    "id": { "type": "string" },
    "source": { "type": "string" },
    "url": { "type": "string" },
    "title": { "type": "string" },
    "authors": { "type": "string" },
    "date": { "type": "string" },
    "abstract_or_snippet": { "type": "string" },
    "full_text_ref": { "type": "string" },
    "doc_type": {
      "type": "string",
      "enum": ["trial", "case_report", "review", "label", "patent", "preprint", "other"]
    },
    "entities": {
      "type": "object",
      "properties": {
        "drugs": { "type": "array", "items": { "type": "string" } },
        "species": { "type": "array", "items": { "type": "string" } },
        "conditions": { "type": "array", "items": { "type": "string" } },
        "mechanisms": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
