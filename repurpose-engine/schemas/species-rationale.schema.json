{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpeciesRationaleBundle",
  "type": "object",
  "required": ["compound", "target_species", "rationale_points"],
  "properties": {
    "compound": { "type": "string" },
    "target_species": { "type": "string" },
    "rationale_points": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["hypothesis", "biological_basis", "evidence_doc_ids", "confidence"],
        "properties": {
          "hypothesis": { "type": "string" },
          "biological_basis": { "type": "string" },
          "evidence_doc_ids": { "type": "array", "items": { "type": "string" } },
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
        },
        "additionalProperties": false
      }
    },
    "pk_pd_notes": { "type": "string" }
  },
  "additionalProperties": false
}
